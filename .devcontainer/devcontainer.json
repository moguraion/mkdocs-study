{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.defaultProfile.osx": "zsh"
      },
      "extensions": [
        "GitHub.copilot-chat",
        "GitHub.copilot",
        "ms-python.python",
        "chrischinchilla.vale-vscode",
        "3w36zj6.textlint"
      ]
    }
  },
  "postCreateCommand": "uv python install && uv lock && uv sync --frozen && uv run lefthook install -f && vale sync"
}
